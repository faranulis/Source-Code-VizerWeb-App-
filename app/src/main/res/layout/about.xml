        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:text="Misi VizerWeb"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:id="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Memberikan Manfaat Dan Membuat Anak Bangsa Menjadi Lebih baju Dalam Bidang Teknologi Dan Memotivasikan Anak Bangsa."
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:id="@+id/textView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="368dp"
        android:textSize="23dp"
        android:text="Chat Kami Di :  "
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView14"
        android:layout_marginStart="8dp" />
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <Button
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:background="@drawable/facebook"
            android:id="@+id/sosmed1"
            app:layout_constraintRight_toLeftOf="@+id/sosmed2" />

        <Button
            android:id="@+id/sosmed2"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:background="@drawable/gplus"
            app:layout_constraintRight_toLeftOf="@+id/sosmed3"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:id="@+id/sosmed3"
            app:layout_constraintRight_toLeftOf="@+id/sosmed4"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />
        <Button
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:id="@+id/sosmed4"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="Tentang APP"
                android:textSize="23dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Version V0.8 Beta"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
