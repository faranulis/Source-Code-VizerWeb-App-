        android:id="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <TextView
        android:layout_width="368dp"
        android:text="Dikukung Oleh "
        android:textSize="23dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />
    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="- Heri Laksono Alvinas"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:id="@+id/textView10"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="- Fiqi Apriansyah"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="- Alifudin"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:id="@+id/textView12"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="- Piki"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:id="@+id/textView9"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="VizerWeb Adalah Sebuah Website Yang Berguna Untuk Sahring Ilmu Tentang Teknologi Dari Segi Tutotial, Tips Trick Serta Informasi Yang Bisa Kamu Pakai Dalam Kehidupan Sehari hari"
